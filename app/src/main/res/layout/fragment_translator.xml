<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/translate_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <EditText
        android:id="@+id/translate_input_et"
        android:inputType="textMultiLine"
        android:maxLength="10000"
        android:scrollHorizontally="false"
        android:imeOptions="actionSend"
        android:hint="@string/text_for_translate"
        android:gravity="top|start"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_alignLeft="@id/translate_btn"
        android:layout_alignStart="@id/translate_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/translated_text_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/translate_input_et" />

    <TextView
        android:id="@+id/not_translated_text_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/translated_text_tv" />

</RelativeLayout>